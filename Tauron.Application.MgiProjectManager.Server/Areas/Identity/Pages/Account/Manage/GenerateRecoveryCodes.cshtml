@page
@using Tauron.Application.MgiProjectManager.Server.Core
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = SimpleLoc["Account_GenerateRecoveryCode_Title"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject SimpleLoc SimpleLoc

<partial name="_StatusMessage" for="StatusMessage"/>
<h4>@ViewData["Title"]</h4>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@SimpleLoc["Account_GenerateRecoveryCode_P1"]</strong>
    </p>
    <p>
        @SimpleLoc["Account_GenerateRecuveryCode_P2"]
    </p>
    @*<p>
        Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
    </p>*@
</div>
<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">@SimpleLoc["Account_GenerateRecuveryCode_GenerateButton"]</button>
    </form>
</div>