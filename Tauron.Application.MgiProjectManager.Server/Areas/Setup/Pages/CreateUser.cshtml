@page
@using Tauron.Application.MgiProjectManager.Server.Areas.Setup.Pages
@model CreateUserModel
@{
    ViewData["Title"] = SimpleLoc["Setup_CreateUser_Title"];
    ViewData["ActivePage"] = SetupManageNavPages.CreateUser;
    ViewData[SetupManageNavPages.LabelName] = SimpleLoc["Setup_Layout_Button_Next"];
}

<div class="container">
    <h4>@ViewData["Title"]</h4>

    <form method="post" class="form-group" id="SetupForm">
        <div class="form-group m-4">
            <label class="form-check-label">@SimpleLoc["Setup_CreateUser_Description"]</label>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">@SimpleLoc["Setup_CreateUser_Email"]</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" asp-for="AdminInput.Email">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">@SimpleLoc["Setup_CreateUser_Password"]</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="AdminInput.Password">
            </div>
        </div>
        @*<div class="form-group row">
            <div class="col">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" onclick="toggleShowPass('AdminInput_Password')" checked="checked">
                    <label class="form-check-label">
                        @SimpleLoc["Setup_CreateUser_ShowPassword"]
                    </label>
                </div>
            </div>
        </div>*@
    </form>
</div>