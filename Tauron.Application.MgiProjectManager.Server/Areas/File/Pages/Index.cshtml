@page
@model MGIProjectManagerServer.Areas.File.Pages.IndexModel
@{
    ViewData["Title"] = SimpleLoc["Files_Index_Title"];
}

@section Scripts
{
    <script>
        resources = {};
        resources["filesIndexUploadLabel"] = "@SimpleLoc["Files_Index_Upload_Label"]" + '<br/>';
        operationId = "";
        message = "";

        $(document).ready(function () {
            uploadInit();
        });

        function openDialog() {
            $("#UploadErrorsDialog").modal({
                keyboard: true,
                show: true
            });
        }
    </script>
}

<div class="container">
    <div class="modal fade" tabindex="-1" role="dialog" id="UploadErrorsDialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@SimpleLoc["Files_Index_ErrorDialog_Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="UploadErrorsContent" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">@SimpleLoc["Files_Index_ErrorDialog_NexLabel"]</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <form method="post" enctype="multipart/form-data" class="align-content-center w-50 m-5 text-center">
            <div id="fileBasket" style="background: gainsboro; height: 400px" class="text-center">
                @SimpleLoc["Files_Index_FileLabel"]
            </div>
            <br/>
            <div class="progress" id="progress">
                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
            </div>
        </form>
    </div>
