        <DataTemplate DataType="{x:Type FixedDocument}">
            <DocumentViewer Document="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type FixedDocumentSequence}">
            <DocumentViewer Document="{Binding}"/>
        </DataTemplate>

