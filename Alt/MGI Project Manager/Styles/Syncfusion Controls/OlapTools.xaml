    <HierarchicalDataTemplate x:Key="PART_HierarchicalTemplate" ItemsSource="{Binding Path=ChildNodes}">
        <ItemsControl>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <ContentControl Margin="2,2,2,2" Width="{Binding Converter={StaticResource widthHeightConvertor}}"
