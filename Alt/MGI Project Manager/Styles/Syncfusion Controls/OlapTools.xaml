    <Style TargetType="olap_tools:AxisElementBuilder">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="olap_tools:AxisElementBuilder">

                    <Grid>
                        <!--Axis elements list-->
                        <ListBox
			Name="PART_listBoxAxisElements" BorderThickness="0.8"
			AllowDrop="True" HorizontalContentAlignment="Stretch"
			IsSynchronizedWithCurrentItem="True">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                    <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                    <Setter Property="Padding" Value="2,0,0,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <Border x:Name="PART_Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true" Margin="2">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="true"/>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsSelected" Value="true"/>
                                                            <Condition Property="Selector.IsSelectionActive" Value="false"/>
                                                        </MultiTrigger.Conditions>
                                                    </MultiTrigger>
                                                    <Trigger Property="IsEnabled" Value="false"/>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <!--List item template-->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <olap_tools:SplitButton Height="28"
							HorizontalAlignment="Stretch"
							Host="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type olap_tools:AxisElementBuilder}}}"
							MetaTreeNode="{Binding}"
							Text="{Binding}">
                                        </olap_tools:SplitButton>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <!--List item context menu-->
                            <ListBox.ContextMenu>
                                <ContextMenu x:Name="PART_ContextMenu">
                                    <MenuItem x:Name="PART_MenuItem" Header="Remove"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                            <Setter Property="Background" Value="{StaticResource ContentBackgroundBrush}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource ContentBorderBrush}"/>
                                </Style>
                            </ListBox.Style>
                        </ListBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

