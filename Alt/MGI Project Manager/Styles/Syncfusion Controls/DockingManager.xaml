                        </TranslateTransform>
                        <ScaleTransform ScaleX="{Binding Path=ContentScaleX, RelativeSource={RelativeSource TemplatedParent}}" ScaleY="{Binding Path=ContentScaleY, RelativeSource={RelativeSource TemplatedParent}}" />
                    </TransformGroup>
