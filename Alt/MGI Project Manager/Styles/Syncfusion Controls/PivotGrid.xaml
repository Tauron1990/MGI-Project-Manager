                        <MenuItem Command="pivotgridschema:PivotCommands.MovetoEnd"
                                  CommandParameter="Move to End"
                                  Header="{Binding Source={StaticResource resourceWrapperKeys},
                                                   Path=PivotSchemaContextMenuEnd}" />
                        <Separator />
                        <MenuItem Command="pivotgridschema:PivotCommands.MovetoFilter"
                                  CommandParameter="Move to Filter"
                                  Header="{Binding Source={StaticResource resourceWrapperKeys},
                                                   Path=PivotSchemaContextMenuToFilter}" />
