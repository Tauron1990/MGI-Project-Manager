                            <Setter Property="Background" TargetName="templateRoot" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type pivotgrid:PivotGridControl}},
                            Path=GroupingButtonHoverBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
