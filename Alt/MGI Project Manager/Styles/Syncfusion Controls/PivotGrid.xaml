                    <BeginStoryboard>
                        <Storyboard Storyboard.TargetName="Part_Indicator" Storyboard.TargetProperty="Fill.Color">
                            <ColorAnimation Duration="0:0:0"
                                            From="#9E9E9E"
                                            To="Transparent" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>
        </StackPanel>
    </DataTemplate>

