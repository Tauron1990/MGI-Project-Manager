<UserControl x:Class="ServiceManager.Installation.Tasks.Ui.NameSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceManager.Installation.Tasks.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Service Name:" Margin="3"></TextBlock>
        <TextBox MinWidth="200" Margin="3" Name="NameBox"/>
        <Button HorizontalAlignment="Right" Margin="3" Content="Bestätigen"/>
    </StackPanel>
</UserControl>
