<UserControl x:Class="ServiceManager.ApiRequester.ApiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceManager.ApiRequester"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="ServiceName" Margin="5" />
        <Button Grid.Row="1" Margin="5" HorizontalAlignment="Right" Content="Abschicken" Click="Send_OnClick"/>
        <TextBlock Name="Error" Grid.Row="2" Margin="5" TextAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
