                                          Stretch="Uniform" Fill="{TemplateBinding Foreground}" Margin="5"
                                          Width="7" Height="12" x:Name="PART_Arrow" RenderTransformOrigin="0.5,0.5"
                                          Grid.Column="1" HorizontalAlignment="Right"
                                          >
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="180"></RotateTransform>
                                        </Path.RenderTransform>
                                    </Path>
                                </Grid>
                            </Grid>
                        </Grid>
                      </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="PART_Hover" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="contentControl1" Property="TextElement.Foreground" Value="{StaticResource HoverForegroundBrush}"/>
                            <Setter TargetName="MainGrid" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                            <Setter TargetName="MainGrid" Property="Border.BorderBrush" Value="{StaticResource HoverBorderBrush}"/>
                            <Setter TargetName="PART_Pressed" Property="Border.BorderBrush" Value="{StaticResource HoverBorderBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource HoverBorderBrush}"/>
                            <Setter TargetName="PART_Arrow" Property="Fill" Value="{StaticResource HoverGlyphBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter TargetName="PART_Arrow" Property="Fill" Value="{StaticResource GlyphBrush}"/>
                            <Setter TargetName="PART_Pressed" Property="Fill" Value="{StaticResource BackgroundBrush}"/>
                            <Setter TargetName="PART_Selection" Property="Fill" Value="{StaticResource BackgroundBrush}"/>
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource BorderBrush}" />
