<catel:DataWindow x:Class="Tauron.Application.Deployment.AutoUpload.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:Tauron.Application.Deployment.AutoUpload.ViewModels"
                  xmlns:catel="clr-namespace:Catel.Windows;assembly=Catel.MVVM"
                  xmlns:ui="clr-namespace:Tauron.Application.Wpf.UI;assembly=Tauron.Application.Wpf"
                  mc:Ignorable="d" d:DataContext="{d:DesignInstance local:MainWindowViewModel}" Icon="Upload.ico"
                  Title="{Binding Title}" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <ContentControl Content="{ui:ViewModelBinding CurrentView}" />
</catel:DataWindow>