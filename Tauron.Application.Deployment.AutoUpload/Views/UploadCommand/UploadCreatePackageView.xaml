<tau:UserControl x:Class="Tauron.Application.Deployment.AutoUpload.Views.UploadCommand.UploadCreatePackageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tau="http://schemas.TauronWpf.com"
             xmlns:local="clr-namespace:Tauron.Application.Deployment.AutoUpload.ViewModels.UploadCommand"
             mc:Ignorable="d" Background="White" d:DataContext="{d:DesignInstance local:UploadCreatePackageViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
           <Grid.RowDefinitions>
               <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
           </Grid.RowDefinitions> 
        <TextBlock Text="Packen und Hochladen" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"></TextBlock>
        <TextBlock Grid.Row="1" Margin="20" TextWrapping="Wrap" Text="{Binding Console}"/>
        <Button Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="7" Padding="5" Content="Abbrechen" tau:CommandBinder.Command="CancelOp"/>
    </Grid>
</tau:UserControl>
